@import "/base/index.wxss";

.page {
  padding-top: 80rpx;

}
.avatars-section {
  height: 490rpx;
  width: 570rpx;
  overflow-y: auto;
  margin: auto;
}

.avatar-container {
  display: inline-block;
  border: solid 1px #eaeaea;
  margin: 10rpx 20rpx;
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
}
.ready-icon {
  position: absolute;
  right: 0;
  bottom: 0;
}

.btn-view {
  margin: 80rpx auto 30rpx;
}
.btn-start {
  position: absolute;
  bottom: 160rpx;
  width: 100%;
}
.ready[plain] {
  background-color: #FF9814;
  border-color: #FF9814;
}

.desc {
  margin-top: 20rpx;
  color: #888888;
  font-size: 28rpx;
}
.title {
  text-align: center;
  width: 70%;
  margin: 0 auto;
}
.input-container {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}
 input {
   display: inline-block;
   width: 85%;
   border-bottom: solid 1px #eaeaea;
   padding-left: 10rpx;
 }

